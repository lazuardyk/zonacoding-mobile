<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingHorizontal="40dp"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:src="@drawable/contact_us" />

    <TextView
        android:id="@+id/contact_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Talk!"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:fontFamily="@font/firasans_regular"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/contact_subheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact us directly via one of our social links:"
        android:textSize="20dp"
        android:textColor="@color/purple_500"
        android:fontFamily="@font/firasans_regular"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/linkedin"
            android:layout_width="@dimen/social_width"
            android:layout_height="@dimen/social_height"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="openInstagram"
            android:src="@drawable/instagram" />

        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="@dimen/social_width"
            android:layout_height="@dimen/social_height"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="openFacebook"
            android:src="@drawable/facebook" />

        <ImageButton
            android:id="@+id/twitter"
            android:layout_width="@dimen/social_width"
            android:layout_height="@dimen/social_height"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="openTwitter"
            android:src="@drawable/twitter" />

        <ImageButton
            android:id="@+id/github"
            android:layout_width="@dimen/social_width"
            android:layout_height="@dimen/social_height"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="openGithub"
            android:src="@drawable/github" />

    </LinearLayout>


</LinearLayout>